# EchoTrade Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# BINANCE API CREDENTIALS (Required for live trading)
# =============================================================================
# Get these from your Binance account API management
# https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Initial portfolio value in USDT
PORTFOLIO_VALUE=10000

# Position sizing as percentage of portfolio (1.0 = 1%, 2.0 = 2%)
POSITION_SIZE_PERCENT=2.0

# Stop loss percentage (2.0 = 2% below entry for long positions)
STOP_LOSS_PERCENT=2.0

# Maximum drawdown before stopping trading (30.0 = 30%)
MAX_DRAWDOWN_PERCENT=30.0

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Minimum trade amount in USDT
MIN_TRADE_AMOUNT=10.0

# Maximum number of concurrent positions
MAX_CONCURRENT_POSITIONS=5

# =============================================================================
# OPERATIONAL SETTINGS
# =============================================================================
# How often to check for new signals (in seconds)
SIGNAL_CHECK_INTERVAL=60

# Order timeout in seconds
ORDER_TIMEOUT=30

# Enable sandbox mode for testing (true/false)
SANDBOX_MODE=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (relative to project directory)
LOG_FILE=logs/echotrade.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to false for production
DEBUG=false

# Paper trading mode (true/false) - overrides sandbox mode
PAPER_TRADING=true